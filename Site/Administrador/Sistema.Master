    <link href="../Layout/locawebstyle/stylesheets/locastyle.css" rel="stylesheet" />
    <link rel="icon" sizes="192x192" href="/Layout/locawebstyle/assets/images/ico-boilerplate.png" />
    <link rel="apple-touch-icon" href="/Layout/locawebstyle/assets/images/ico-boilerplate.png" />

